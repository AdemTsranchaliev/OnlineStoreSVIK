    <!-- Contact -->
    <!-- Contact -->
    <section class="section-wrap pb-40">
        <div class="container">
            <div class="row">

                <div class="col-lg-8">
                    <h2 class="uppercase">Свържете се с нас</h2>
                    <p>Пишете ни тук във формичката или се свържете с нас, на посочения телефон или имейл адрес</p>
                    <!-- Contact Form -->
                    <form id="contact-form" class="contact-form mt-30 mb-30" method="post" action="{{ path('contactForm') }}">
                        <div class="contact-name">
                            <label for="name">Име <abbr title="required" class="required">*</abbr></label>
                            <input name="name" id="name" type="text">
                        </div>
                        <div class="contact-email">
                            <label for="email">Имейл <abbr title="required" class="required">*</abbr></label>
                            <input name="email" id="email" type="email">
                        </div>
                        <div class="contact-subject">
                            <label for="email">Тема</label>
                            <input name="subject" id="subject" type="text">
                        </div>
                        <div class="contact-message">
                            <label for="message">Съобщение<abbr title="required" class="required">*</abbr></label>
                            <textarea id="message" name="message" rows="7" required="required"></textarea>
                        </div>

                        <input type="submit" class="btn btn-lg btn-color btn-button" value="Изпрати запитване"
                               id="submit">
                        <div id="msg" class="message"></div>
                    </form>
                </div> <!-- end col -->

                <div class="col-lg-4">
                    <div class="contact-info">
                        <ul>
                            <li class="contact-info__item">
                                <h4 class="contact-info__title uppercase">Адрес</h4>
                                <address class="address">4550 гр. Пещера, ул.Михаил Такев №2д</address>
                            </li>
                            <li class="contact-info__item">
                                <h4 class="contact-info__title uppercase">Контакти</h4>
                                <ul>
                                    <li><span>Телефон: </span><a href="tel:+1-888-1554-456-123">+359 892 609 802</a>
                                    </li>
                                    <li><span>Имейл: </span><a
                                                href="mailto:ademcran4aliev@abv.bg">ademcran4aliev@abv.bg</a></li>
                                    <li><span>Факс: </span><a href="#">(00359) 0350/65729</a></li>
                                </ul>
                            </li>
                            <li class="contact-info__item">
                                <h4 class="contact-info__title uppercase">Работно време</h4>
                                <ul>
                                    <li>Пон – Пет: 8ч. до 18ч.</li>

                                </ul>
                            </li>
                        </ul>

                    </div>
                </div>

            </div>
        </div>
    </section> <!-- end contact -->
