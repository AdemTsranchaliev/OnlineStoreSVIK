<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"/>
    <meta name="description" content="">
    <title>{% block title %}SVIK{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/font-icons.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="stylesheet" href="{{ asset('css/color.css') }}">
        <link rel="stylesheet"
              href="http://fonts.googleapis.com/css?family=Questrial:400%7CMontserrat:300,400,700,700i">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('shoes.ico') }}"/>
    <link rel="apple-touch-icon" href="{{ asset('/img/apple-touch-icon.png') }}"/>
    <link rel="apple-touch-icon" href="{{ asset('/img/apple-touch-icon-72x72.png') }}"/>
    <link rel="apple-touch-icon" href="{{ asset('/img/apple-touch-icon-114x114.pn') }}"/>

</head>

<body id="{% block body_id %}{% endblock %}">

{% block header %}
<div class="loader-mask">
    <div class="loader">
        <div></div>
    </div>
</div>


<!-- Mobile Sidenav -->
<header class="sidenav" id="sidenav">
    <!-- Search -->
    <div class="sidenav__search-mobile">

    </div>

    <nav>
        <ul class="sidenav__menu" role="menubar">
            <li>
                <a href="{{ path('blog_index') }}" class="sidenav__menu-link">Начало</a>
            </li>
            <li>
                <a class="sidenav__menu-link">Дамска колекция</a>
                <button class="sidenav__menu-toggle" aria-haspopup="true" aria-label="Open dropdown"><i
                            class="ui-arrow-down"></i></button>
                <ul class="sidenav__menu-dropdown">
                    <li><a href="{{ path('womenSandals') }}" class="sidenav__menu-link">Дамски Сандали</a></li>
                    <li><a href="{{ path('womenSportShoes') }}" class="sidenav__menu-link">Дамски спортни обувки</a>
                    </li>
                    <li><a href="{{ path('womenEverydayShoes') }}" class="sidenav__menu-link">Дамски ежедневни
                            обувки</a></li>
                    <li><a href="{{ path('womenBoots') }}" class="sidenav__menu-link">Дамски боти</a></li>
                    <li><a href="{{ path('womenBBoots') }}" class="sidenav__menu-link">Дамски ботуши</a></li>

                </ul>
            </li>

            <li>
                <a class="sidenav__menu-link">МЪЖКА КОЛЕКЦИЯ</a>
                <button class="sidenav__menu-toggle" aria-haspopup="true" aria-label="Open dropdown"><i
                            class="ui-arrow-down"></i></button>
                <ul class="sidenav__menu-dropdown">
                    <li><a href="{{ path('manOfficialShoes') }}" class="sidenav__menu-link">Мъжки официални обувки</a>
                    </li>
                    <li><a href="{{ path('manSportShoes') }}" class="sidenav__menu-link">мъжки спортни обувки</a></li>
                </ul>
            </li>


            <li>
                <a href="{{ path('contactForm') }}" class="sidenav__menu-link">За нас</a>
            </li>

            <li>
                <a href="{{ path('contactForm') }}" class="sidenav__menu-link">Контакти</a>
            </li>

        </ul>
    </nav>
</header> <!-- end mobile sidenav -->


<main class="main oh" id="main">

    <!-- Navigation -->
    <header class="nav">

        <div class="nav__holder nav--sticky">
            <div class="container relative">

                <!-- Top Bar -->
                <div class="top-bar d-none d-lg-flex">

                    <!-- Currency / Language -->
                    <ul class="top-bar__currency-language">
                        <li class="top-bar__language">
                            <a href="#">БЪЛГАРСКИ</a>
                        </li>
                        <li class="top-bar__currency">
                            <a href="#">ЛЕВА</a>
                        </li>
                    </ul>

                    <!-- Promo -->
                    <p class="top-bar__promo text-center">Добре дошли в онлайн магазина на SVIK</p>

                    <!-- Sign in / Wishlist / Cart -->
                    <div class="top-bar__right">
                        <div class="top-bar__item nav-cart">
                            <div class="nav-cart__dropdown">
                                <div class="nav-cart__items">
                                    <div class="nav-cart__item clearfix">
                                        <div class="nav-cart__img">
                                        </div>
                                        <div class="nav-cart__title">
                                            <div class="nav-cart__price">
                                            </div>
                                        </div>
                                        <div class="nav-cart__remove">
                                            <a href="#"><i class="ui-close"></i></a>
                                        </div>
                                    </div>
                                </div> <!-- end cart items -->
                            </div>
                        </div>
                    </div>

                </div> <!-- end top bar -->

                <div class="flex-parent">

                    <!-- Mobile Menu Button -->
                    <button class="nav-icon-toggle" id="nav-icon-toggle" aria-label="Open mobile menu">
              <span class="nav-icon-toggle__box">
                <span class="nav-icon-toggle__inner"></span>
              </span>
                    </button> <!-- end mobile menu button -->

                    <!-- Logo -->
                    <a href="{{ path('blog_index') }}" class="logo">
                        <img class="logo__img" src="/img/logo_light.png" alt="logo">
                    </a>

                    <!-- Nav-wrap -->
                    <nav class="flex-child nav__wrap d-none d-lg-block">
                        <ul class="nav__menu">


                            {% if app.user %}


                                <li class="nav__dropdown">
                                    <a href="{{ path('blog_index') }}">Начало</a>
                                </li>

                                <li class="nav__dropdown">
                                    <a href="{{ path('user_profile') }}">Админ панел</a>
                                </li>

                                <li class="nav__dropdown">
                                    <a href="{{ path('admin_addModel') }}">Добави модел</a>
                                </li>
                                <li class="nav__dropdown">
                                    <a href="{{ path('admin_seeNewOrder') }}">НОВИ</a>
                                </li>
                                <li class="nav__dropdown">
                                    <a href="{{ path('admin_seeOldOrder') }}">ИЗПЪЛНЕНИ</a>
                                </li>
                                <li>
                                    <a href="{{ path('security_logout') }}">
                                        ИЗХОД
                                    </a>
                                </li>
                            {% else %}
                                <li class="nav__dropdown">
                                    <a href="#">Дамска колекция</a>
                                    <ul class="nav__dropdown-menu">
                                        <li><a href="{{ path('womenSandals') }}">Дамски сандали</a></li>
                                        <li><a href="{{ path('womenSportShoes') }}">Дамски спортни обувки</a></li>
                                        <li><a href="{{ path('womenEverydayShoes') }}">Дамски ежедневни обувки</a></li>
                                        <li><a href="{{ path('womenBoots') }}">Дамски боти</a></li>
                                        <li><a href="{{ path('womenBBoots') }}">Дамски ботуши</a></li>
                                    </ul>
                                </li>
                                <li class="nav__dropdown active">
                                    <a href="#">Мъжка колекция</a>
                                    <ul class="nav__dropdown-menu">
                                        <li><a href="{{ path('manOfficialShoes') }}">Мъжки официални обувки</a></li>
                                        <li><a href="{{ path('manSportShoes') }}">Мъжки спортни обувки</a></li>
                                    </ul>
                                </li>
                                <li class="nav__dropdown active">
                                    <a href="{{ path('about') }}">За нас</a>
                                </li>
                                <li class="nav__dropdown active">
                                    <a href="{{ path('contactForm') }}">Контакти</a>
                                </li>
                            {% endif %}


                        </ul> <!-- end menu -->

                    </nav> <!-- end nav-wrap -->


                    <!-- Search -->
                    <div class="flex-child nav__search d-none d-lg-block">

                    </div>





                </div> <!-- end flex-parent -->
            </div> <!-- end container -->

        </div>
    </header>
    {% endblock %}

    <div class="container body-container">
        {% block body %}
            <div class="row">
                <div id="main" class="main oh">
                    {% block main %}{% endblock %}
                </div>
            </div>
        {% endblock %}
    </div>

    {% block footer %}
        <footer class="footer">
            <div class="container">
                <div class="footer__widgets">
                    <div class="row">

                        <div class="col-lg-4 col-md-6">
                            <div class="widget widget__about">
                                <h4 class="widget-title white">SVIK shoes</h4>
                                <p class="widget__about-text">Едно ново усещане...</p>
                            </div>
                        </div>

                        <div class="col-lg-4 col-md-6">
                            <div class="widget widget__newsletter">
                                <h4 class="widget-title white">Абонирайте се</h4>

                                <form class="mc4wp-form">
                                    <div class="mc4wp-form-fields">
                                        <p><input type="email" placeholder="Въведете своя email"
                                                  aria-label="Newsletter input"></p>
                                        <p><input type="submit" value="Email"></p>
                                    </div>
                                </form>

                                <div class="socials socials--white mt-20">
                                    <a href="https://www.facebook.com/svik.hit/" class="facebook" aria-label="facebook"><i class="ui-facebook"></i></a>
                                    <a href="https://www.instagram.com/svik_shoes/" class="instagram" aria-label="instagram"><i
                                                class="ui-instagram"></i></a>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-2 col-md-6">
                            <div class="widget widget_nav_menu">
                                <h4 class="widget-title white">Меню</h4>
                                <ul>
                                    <li><a href="{{ path('blog_index') }}">Начало</a></li>
                                    <li><a href="{{ path('about') }}">За нас</a></li>
                                    <li><a href="{{ path('contactForm') }}">Контакти</a></li>
                                    <li><a href="{{ path('termsAndConditions') }}">Общи условия</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div> <!-- end container -->

            <div class="footer__bottom">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6 text-sm-center">
              <span class="copyright">
                &copy; 2018 SVIK Shoes. Всички права запазени.</a>
              </span>
                        </div>

                        <div class="col-md-6 footer__payment-systems text-right text-sm-center mt-sml-10">

                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <div id="back-to-top">
            <a href="#top"><i class="ui-arrow-up"></i></a>
        </div>
    {% endblock %}

    {% block javascripts %}
        <script src="{{ asset('js/jquery.min.js') }}"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('js/easing.min.js') }}"></script>
        <script src="{{ asset('js/jquery.magnific-popup.min.js') }}"></script>
        <script src="{{ asset('js/owl-carousel.min.js') }}"></script>
        <script src="{{ asset('js/flickity.pkgd.min.js') }}"></script>
        <script src="{{ asset('js/modernizr.min.js') }}"></script>
        <script src="{{ asset('http://maps.google.com/maps/api/js?key=AIzaSyB25gBtcmj-6mFmckZBxpCl7QTwBCHdt2A') }}"></script>
        <script src="{{ asset('js/gmap3.min.js') }}"></script>
        <script src="{{ asset('js/scripts.js') }}"></script>
        <script src="{{ asset('js/custom.js') }}">


        </script>
    {% endblock %}
</main>
</body>
</html>
