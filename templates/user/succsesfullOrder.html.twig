{% extends 'base.html.twig' %}


{% block main %}



    <!-- slider Area Start-->
    <div class="slider-area ">
        <!-- Mobile Menu -->
        <div class="single-slider slider-height2 d-flex align-items-center" data-background="assets/img/hero/category.jpg">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap text-center">
                            <h2>УСПЕШНА ПОРЪЧКА</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- slider Area End-->

    <!--================ confirmation part start =================-->
    <section class="confirmation_part section_padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="confirmation_tittle">
                        <span>Поръчката беше изпратена успешно. Очаквайте обаждане от служител за потвърждение.</span>
                    </div>
                </div>
                <div class="col-lg-6 col-lx-4">
                    <div class="single_confirmation_details">
                        <h4>Данни за поръчка</h4>
                        <ul>
                            <li>
                                <p>Номер на поръчка</p><span>: {{ order.id }}</span>
                            </li>
                            <li>
                                <p>Поръчано на</p><span>: {{ order.orderOn|date('Y-m-d H:i:s') }}</span>
                            </li>
                            <li>
                                <p>Общо за поръчка</p><span>: {{ order.price|number_format(2) }} лв</span>
                            </li>
                            <li>
                                <p>Метод на плащане</p><span>: Наложен платеж</span>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-6 col-lx-4">
                    <div class="single_confirmation_details">
                        <h4>Данни за доставка</h4>
                        <ul>
                            <li>
                                <p>Получател </p><span>: {{ order.name }} {{ order.surname }}</span>
                            </li>
                            <li>
                                <p>град</p><span>: {{ order.populatedPlace }}</span>
                            </li>
                            <li>
                                <p>улица</p><span>: {{ order.address }}</span>
                            </li>

                            <li>
                                <p>офис на доставчик</p><span>: {{ order.office }}</span>
                            </li>

                        </ul>
                    </div>

            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="order_details_iner">
                        <h3>Детайли за поръчани продукти</h3>
                        <table class="table table-borderless">
                            <thead>
                            <tr>
                                <th scope="col" colspan="2">Продукт(номер)</th>
                                <th scope="col">Количество</th>
                                <th scope="col">Общо</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% set sum=0 %}
                            {% for product in cart %}
                                {% set sum=sum+product.price %}
                              <tr>
                                  <a href="#">
                                      <th colspan="2"><span>{{ product.getCartProduct()[0].title }}({{ product.modelSize }})</span></th>
                                      <th>{{ product.getCartProduct()[0].price|number_format(2)}} лв <br/>x {{  product.quantity }}</th>
                                      <th> <span>{{ product.price|number_format(2) }} лв</span></th>
                                    </a>
                              </tr>
                            {% endfor %}
                            <tr>
                                <th colspan="3">Общо за поръчка</th>
                                <th> <span>{{ sum|number_format(2) }}</span></th>
                            </tr>
                            <tr>
                                <th colspan="3">Доставка</th>
                                <th><span>Поема се от купувача</span></th>
                            </tr>
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--================ confirmation part end =================-->



{% endblock %}