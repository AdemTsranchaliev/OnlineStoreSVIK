{% extends 'base.html.twig' %}


{% block main %}

    <div class="slider-area ">
        <!-- Mobile Menu -->
        <div class="single-slider slider-height2 d-flex align-items-center" data-background="assets/img/hero/category.jpg">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="hero-cap text-center">
                            <h2>Кошница</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--================Cart Area =================-->
    <section class="cart_area section_padding">
        <div class="container">
            <div class="cart_inner">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">Продукт</th>
                            <th scope="col">Номер</th>
                            <th scope="col">Ед. цена</th>
                            <th scope="col">Количество</th>
                            <th scope="col">Общо</th>
                        </tr>
                        </thead>
                        <tbody id="toChange">
                        {% set sum=0 %}
                        {% for product in productsCart %}
                        {% set sum= sum+product.price%}
                        <tr>
                            <td>
                                <a href="{{ path('singleProduct',{'id':product.productId}) }}">
                                <div class="media">
                                    <div class="d-flex">
                                        <img src="/assets/img/uploads/{{ product.productId }}.0.jpg" alt="" height="140" width="140" />
                                    </div>
                                    <div class="media-body">
                                        <p>{{ product.getCartProduct()[0].getTitle() }}</p>
                                    </div>
                                </div>
                                </a>
                            </td>
                            <td>
                                <h5>({{ product.modelSize }})</h5>
                            </td>
                            <td>
                                <h5>{{ product.getCartProduct()[0].getPrice()|number_format(2) }} лв</h5>
                            </td>
                            <td>
                                <h5>{{ product.quantity }}</h5>
                            </td>

                            <td>
                                <h5>{{ product.price|number_format(2) }} лв</h5>
                            </td>
                            <td>
                                <div >
                                    <a href="#" onclick="deleteProd({{ product.id }})" style="color: #0b0b0b"><span>&#10006;</span></a>
                                </div>
                            </td>

                        </tr>
                        {% endfor %}
                        {% if sum != 0 %}
                        <tr>

                            <td>
                                <h5>Общо за кошница</h5>
                            </td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td>
                                <h5>{{ sum|number_format(2) }} лв</h5>
                            </td>
                        </tr>
                        <tr class="bottom_button">
                            <td>
                                <a class="btn_1" href="{{ path('index') }}">Начало</a>
                            </td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td>
                                <div class="cupon_text float-right">
                                    <a class="btn_1" href="{{ path('ordering') }}">КЪМ ПОРЪЧКА</a>
                                </div>
                            </td>
                        </tr>
                        {% else %}
                            <tr class="bottom_button">
                                <td></td>
                                <td></td>
                                <td></td>
                                <td>Във вашата кошница няма продукти</td>
                                <td></td>
                                <td></td>
                            </tr>
                        {% endif %}
                        </tbody>
                    </table>

                </div>
            </div>
    </section>
    <!--================End Cart Area =================-->


{% endblock %}