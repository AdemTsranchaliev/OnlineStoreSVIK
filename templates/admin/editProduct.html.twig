{% extends 'base.html.twig' %}


{% block main %}

    <section class="login_part section_padding ">
        <div class="container">

            <div class="col-lg-12 col-md-6">
                <div class="login_part_form">
                    <div class="login_part_form_iner">
                        <h3>Редактиране на продукт</h3>



                        <form class="row contact_form" action="{{ path('editProduct' , { 'id':producttoEdit.id}) }}" method="post" novalidate="novalidate" enctype="multipart/form-data" >

                            <div class="col-md-12 form-group p_star">
                                <input type="text" value="{{ producttoEdit.title }}" name="products[title]" id="addProductName" class="form-control" placeholder="Заглавие" required autofocus>
                            </div>
                            <div class="col-md-12 form-group p_star">
                                <input type="text" value="{{ producttoEdit.modelNumber }}" name="products[modelNumber]" id="addProductModelNumber" class="form-control" placeholder="Номер на модел" required autofocus>
                            </div>
                            <div class="col-md-12 form-group p_star">
                                <input type="text"  value="{{ producttoEdit.price }}" name="products[price]" id="addProductPrice" class="form-control" placeholder="Цена" required autofocus>
                            </div>
                            <div class="col-md-12 form-group p_star">
                                <input type="text" value="{{ producttoEdit.sizes }}"  name="products[sizes]" id="size" class="form-control" placeholder="Размери" required autofocus>
                            </div>
                            <div class="col-md-12 form-group p_star">
                                <input type="text" value="{{ producttoEdit.color }}"  name="products[color]" id="size" class="form-control" placeholder="Цвят" required autofocus>
                            </div>
                            <div class="col-md-12 form-group p_star">
                                <div class="form-select" id="default-select">
                                    <select name="products[category]" id="addProductCategory" >
                                        <option value="{{ producttoEdit.categoryR.tag }}" >{{ producttoEdit.categoryR.name }}</option>
                                        {% for category in categories %}
                                            <option value="{{ category.tag }}">{{ category.name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-12 form-group p_star">
                                <textarea type="text"  name="products[description]" id="size" class="form-control" placeholder="Описание..." required autofocus>{{ producttoEdit.description }}</textarea>
                            </div>

                            <label>Промоция</label>
                            <div class="checkbox mb-3">
                                {% if producttoEdit.isInPromotion %}
                                    <input type="checkbox" id="ship-to-different-address-checkbox"
                                           class="input-checkbox"  name="products[isInPromotion]"value="1" checked>
                                {% else %}
                                    <input type="checkbox" id="ship-to-different-address-checkbox"
                                           class="input-checkbox"  name="products[isInPromotion]"value="1">
                                {% endif %}
                                <label for="ship-to-different-address-checkbox" class="checkbox">В промоция</label>
                            </div>
                            <div class="col-md-12 form-group p_star">
                                <input type="text"  value="{{ producttoEdit.discountPrice }}"  name="products[discountPrice]"  class="form-control" placeholder="Намалено от" required autofocus>
                            </div>

                            <div class="col-md-12 form-group">
                                <button type="submit" value="submit" class="btn_3">
                                    Редактирай
                                </button>

                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
        </div>
    </section>
{% endblock %}