{% extends 'base.html.twig' %}


{% block main %}


    <section class="login_part section_padding ">
        <div class="container">

            <div class="col-lg-12 col-md-6">
                <div class="login_part_form">
                    <div class="login_part_form_iner">
                        <h3>Добавяне на продукт</h3>



                        <form class="row contact_form" action="{{ path('addProduct') }}" method="post" novalidate="novalidate" enctype="multipart/form-data" >

                            <div class="col-md-12 form-group p_star">
                                <input type="text" name="products[title]" id="addProductName" class="form-control" placeholder="Заглавие" required autofocus>
                            </div>
                            <div class="col-md-12 form-group p_star">
                                <input type="text" name="products[modelNumber]" id="addProductModelNumber" class="form-control" placeholder="Номер на модел" required autofocus>
                            </div>
                            <div class="col-md-12 form-group p_star">
                                <input type="text"  name="products[price]" id="addProductPrice" class="form-control" placeholder="Цена" required autofocus>
                            </div>
                            <div class="col-md-12 form-group p_star">
                                <input type="text"  name="products[sizes]" id="size" class="form-control" placeholder="Размери" required autofocus>
                            </div>
                            <div class="col-md-12 form-group p_star">
                                <input type="text"  name="products[color]" id="size" class="form-control" placeholder="Цвят" required autofocus>
                            </div>
                            <div class="col-md-12 form-group p_star">

                                <div class="form-select" id="default-select">
                                    <select name="products[category]" id="addProductCategory" >
                                        <option value=" 1">Категории</option>
                                        {% for category in categories %}
                                            <option value="{{ category.tag }}">{{ category.name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-12 form-group p_star">
                                <textarea type="text"  name="products[description]" id="size" class="form-control" placeholder="Описание..." required autofocus></textarea>
                            </div>

                            <div class="col-md-12 form-group p_star">
                                <label>Снимка 1</label>
                                <input type="file" name="file[]">
                            </div>
                            <div class="col-md-12 form-group p_star">
                                <label>Снимка 1</label>
                                <input type="file" name="file[]">
                            </div>
                            <div class="col-md-12 form-group p_star">
                                <label>Снимка 1</label>
                                <input type="file" name="file[]">
                            </div>
                            <div class="col-md-12 form-group p_star">
                                <label>Снимка 1</label>
                                <input type="file" name="file[]">
                            </div>

                            <div class="col-md-12 form-group">
                                <button type="submit" value="submit" class="btn_3">
                                    Добави
                                </button>
                                <a class="lost_pass" href="#">Забравена парола?</a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
        </div>
    </section>


{% endblock %}